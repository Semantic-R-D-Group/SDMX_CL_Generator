#####################################################
# CL_INDEXTYPE Scheme Definition
#####################################################

sip-sdmx-code:indexType a skos:ConceptScheme ;
    rdfs:subClassOf sdmx-code:ConceptScheme ;
    skos:prefLabel "Index type - codelist scheme"@en ;
    rdfs:label "Index type - codelist scheme"@en ;
    skos:notation "CL_INDEXTYPE" ;
    skos:definition "A reference indexType codelist based on ESTAT:CL_IDX_TYPE(1.0)"@en ;
    rdfs:seeAlso <https://registry.sdmx.org/sdmx/v2/structure/codelist/ESTAT/CL_IDX_TYPE/1.0> ;
    skos:note "ESTAT:CL_IDX_TYPE(1.0): Differentiates between different types of indices"@en ;
    rdfs:seeAlso sip-sdmx-code:IndexType .

sip-sdmx-code:IndexType a rdfs:Class ;
    rdfs:subClassOf skos:Concept ;
    skos:prefLabel "Index type - codelist class"@en ;
    rdfs:label "Index type - codelist class"@en ;
    rdfs:isDefinedBy sip-sdmx-code:indexType ;
    skos:inScheme sip-sdmx-code:indexType .


########################################
# CL_INDEXTYPE Codes
########################################
    
sip-sdmx-code:indexType-CPI a skos:Concept, sip-sdmx-code:IndexType;
    skos:topConceptOf sip-sdmx-code:indexType ;
    skos:inScheme sip-sdmx-code:indexType ;
    skos:notation "CPI" ;
    skos:prefLabel "Consumer price index"@en ;
    rdfs:label "Consumer price index"@en .

sip-sdmx-code:indexType skos:hasTopConcept sip-sdmx-code:indexType-CPI .


